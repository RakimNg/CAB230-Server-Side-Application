                "tags": [
                    "Movies"
                ],
                "parameters": [
                    {
                        "name": "imdbID",
                        "in": "path",
                        "description": "IMDb ID of the movie",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Movie"
                                },
                                "example": {
                                    "title": "Star Trek: First Contact",
                                    "year": 1996,
                                    "runtime": 111,
                                    "genres": [
                                        "Action",
